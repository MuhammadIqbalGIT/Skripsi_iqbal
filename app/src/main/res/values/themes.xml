<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnBoardingScreens" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayoutStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#B2BEC3</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:radius">8dp</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">#2D3436</item>
    </style>


    <style name="buttonCustomBlue" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">156dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="fontFamily">@font/publicsansreguler</item>
        <item name="cornerRadius">15dp</item>
        <item name="strokeColor">#20409A</item>
    </style>

    <style name="buttonCustomWhite" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/blue</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/publicsansreguler</item>
        <item name="cornerRadius">30dp</item>
        <item name="strokeColor">@color/blue</item>
    </style>

    
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>
